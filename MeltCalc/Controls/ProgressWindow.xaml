<Window x:Class="MeltCalc.Controls.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подождите..." Height="208" Width="495.333" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="2*"/>
    		<RowDefinition Height="2*"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<ProgressBar x:Name="_progress" VerticalAlignment="Center" Height="68" Margin="10,0" Grid.Row="1"/>
    	<TextBlock x:Name="_text" TextWrapping="Wrap" Text="Идёт расчет..." VerticalAlignment="Center" Margin="10,0"/>
    </Grid>
</Window>
