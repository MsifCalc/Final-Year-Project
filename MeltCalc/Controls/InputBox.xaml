<Window x:Class="MeltCalc.Controls.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        Padding="5" d:DesignWidth="469" ShowInTaskbar="False" Width="460" ResizeMode="NoResize" Height="130">
    <StackPanel UseLayoutRounding="True">
        <TextBlock x:Name="CaptionText" Text="Enter some text" x:FieldModifier="private" Margin="5"/>
        <TextBox x:Name="ResponseTextBox" x:FieldModifier="private"  Margin="5"/>
        <Button Content="OK" HorizontalAlignment="Right" Width="80"  Margin="5" Click="OnClick"/>
    </StackPanel>
</Window>
